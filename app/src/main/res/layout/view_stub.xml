<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/view_stub_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:importantForAccessibility="no"

        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/view_stub_text_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:gravity="center"

        tools:text="[Скоро здесь появится список партнеров]" />

    <TextView
        android:id="@+id/view_stub_text_view_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"

        tools:text="[Скоро здесь появятся\nновые функции]" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/view_stub_button_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"

        tools:text="[Добавить ключ]"
        tools:visibility="visible" />

</LinearLayout>
