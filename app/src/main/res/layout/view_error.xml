<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/view_error_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:importantForAccessibility="no"

        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/view_error_text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:gravity="center"

        tools:text="[Нет соединения c интернетом]" />

    <TextView
        android:id="@+id/view_error_text_view_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:visibility="gone"

        tools:text="[Сервер не отвечает, попробуйте\nзайти чуть позже]"
        tools:visibility="visible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/view_error_button_retry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        tools:text="[Повторить]" />

</LinearLayout>
